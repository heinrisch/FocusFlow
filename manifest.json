{
    "manifest_version": 3,
    "name": "FocusFlow",
    "version": "0.1.0",
    "description": "Focus Sessions for Chrome - Stay productive by blocking distracting sites.",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "permissions": [
        "storage",
        "alarms",
        "declarativeNetRequest",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "options_page": "src/options/index.html",
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/blocked/index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}